<h1><%= @doctor.name() %></h1>

<% if @doctor.patients().any?() %>
  <h3>Here are all the tasks in this list:</h3>

  <ul>
    <% @doctor.patients().each() do |patient| %>
      <li> <%= patient.name() %> </li>
    <% end %>
  </ul>

<% else %>
  <p>There are no patients on this list.</p>
<% end %>

<div class="container">
  <a href="/"><button class="btn">Home</button></a>
</div>

<form action="/patients" method="post">
  <input id="doctor_id" name="doctor_id" type="hidden" value=" <%= @doctor.id() %>">

  <label for="patient_name">Name</label>
  <input id="patient_name" name="patient_name" type="text">

  <label for="birthday">Birthday</label>
  <input id="birthday" name="birthday" type="text">
  <button type="submit">Add New Patient</button>
</form>
